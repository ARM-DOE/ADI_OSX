TARGET_TYPE = TEST
TARGET      = libcds3_test

include $(MKINC_DIR)/make.defs

IFLAGS += \
-I$(BUILD_ROOT)/include \
-I$(GLIB_LIB)/include \
-I$(GLIB_LIB)/include/glib-2.0 \
-I$(GLIB_LIB)/lib/glib-2.0/include

LFLAGS += \
-L$(BUILD_ROOT)/lib$(LIB64) \
-L$(AFL_LIB)/lib$(LIB64) \
-L$(GLIB_LIB)/lib$(LIB64)

RFLAGS += \
-R$(BUILD_ROOT)/lib$(LIB64) \
-R$(AFL_LIB)/lib$(LIB64) \
-R$(GLIB_LIB)/lib$(LIB64)

LIBS   += -lcds3 -lmsngr -lglib-2.0

CLEAN_FILES = libcds3_test.out

include $(MKINC_DIR)/make.rules

