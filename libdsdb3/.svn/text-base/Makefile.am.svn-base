SUBPACKAGE = libdsdb3

SUBDIRS = test

lib_LTLIBRARIES = libdsdb3.la

INCLUDES = $(DBCONN_CFLAGS) $(CDS3_CFLAGS) $(MSNGR_CFLAGS)

libdsdb3_la_SOURCES = datastream_config.c ds_class.c ds_times.c process_location.c dbog_dod.c dsdb.c dqrdb.c facility_location.c process_state.c dbog_dsdb.c dsdb_version.c family_process.c process_status.c dbog_retriever.c ds_dod.c process_config.c retriever.c dbog_dsdb.h dbog_dod.h dbog_retriever.h
libdsdb3_la_LDFLAGS = $(DBCONN_LIBS) $(CDS3_LIBS) $(MSNGR_LIBS)

pkgconfigdir = $(libdir)/pkgconfig
pkgconfig_DATA = dsdb3.pc

DOXYGEN_SRCS = $(libdsdb3_la_SOURCES) ../../include/dsdb3.h

TAGFILES = $(DBCONN_TAG)=../libdbconn \
           $(CDS3_TAG)=../libcds3 \
           $(MSNGR_TAG)=../libmsngr

include $(top_srcdir)/doxygen.am
EXTRA_DIST = doxygen.cfg

MOSTLYCLEANFILES = $(DX_CLEANFILES)

BUILT_SOURCES = doxygen-doc/$(SUBPACKAGE).tag

install-data-hook: doxygen-install
