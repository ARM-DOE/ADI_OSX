TARGET_TYPE = SO
TARGET      = libncds3.so

include $(MKINC_DIR)/make.defs

IFLAGS += \
-I$(AFL_LIB)/include \
-I$(NETCDF4_LIB)/include \
-I$(HDF5_LIB)/include \
-I$(GLIB_LIB)/include \
-I$(GLIB_LIB)/include/glib-2.0 \
-I$(GLIB_LIB)/lib/glib-2.0/include

LFLAGS += \
-L$(AFL_LIB)/lib$(LIB64) \
-L$(NETCDF4_LIB)/lib$(LIB64) \
-L$(HDF5_LIB)/lib$(LIB64) \
-L$(GLIB_LIB)/lib$(LIB64)

RFLAGS += \
-R$(AFL_LIB)/lib$(LIB64) \
-R$(NETCDF4_LIB)/lib$(LIB64) \
-R$(HDF5_LIB)/lib$(LIB64) \
-R$(GLIB_LIB)/lib$(LIB64)

LIBS   += -lcds3 -lmsngr -lnetcdf -lhdf5 -lhdf5_hl -lglib-2.0

include $(MKINC_DIR)/make.rules

